{
    "name": "4mation/wp-boilerplate",
    "type": "project",
    "authors": [
        {
            "name": "Harlan Wilton",
            "email": "harlan.wilton@4mation.com.au"
        }
    ],
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        },
        {
            "type": "package",
            "package": {
                "name": "advanced-custom-fields/advanced-custom-fields-pro",
                "version": "5.6.6",
                "type": "wordpress-muplugin",
                "dist": {
                    "type": "zip",
                    "url": "https://connect.advancedcustomfields.com/index.php?p=pro&a=download"
                },
                "require": {
                    "philippbaschke/acf-pro-installer": "^1.0",
                    "composer/installers": "^1.0"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "4m-mirror/gravity-forms",
                "version": "2.3.0.3",
                "type": "wordpress-plugin",
                "dist": {
                    "type": "zip",
                    "url": "https://bitbucket.org/harlan_wilton/premium-wordpress/downloads/gravityforms_2.3.0.3.zip"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "4m-mirror/acf-widgets",
                "version": "1.0.7.1",
                "type": "wordpress-muplugin",
                "dist": {
                    "type": "zip",
                    "url": "https://github.com/loonpwn/WP-ACF-Widgets/releases/download/v1.0.7/wp-acf-widgets-v1.0.7.1.zip"
                }
            }
        }
    ],
    "require": {
        "php": ">=7",
        "4m-mirror/acf-widgets": "1.0.7.1",
        "4m-mirror/gravity-forms": "2.3.0.3",
        "advanced-custom-fields/advanced-custom-fields-pro": "^5.6.6",
        "brainmaestro/composer-git-hooks": "^2.4",
        "composer/installers": "^1.4.0",
        "guzzlehttp/guzzle": "~6.0",
        "illuminate/cache": "^5.5",
        "illuminate/config": "^5.5.2",
        "illuminate/container": "^5.5",
        "illuminate/log": "~5.5.0",
        "illuminate/support": "^5.5",
        "illuminate/view": "^5.5.2",
        "johnpbloch/wordpress": "^4.9.5",
        "league/flysystem": "^1.0",
        "oscarotero/env": "^1.1.0",
        "roots/sage-lib": "~9.0.0-beta.4",
        "roots/wp-password-bcrypt": "^1.0.0",
        "vlucas/phpdotenv": "^2.4.0",
        "wpackagist-plugin/acf-content-analysis-for-yoast-seo": "2.0.1",
        "wpackagist-plugin/amazon-s3-and-cloudfront": "^1.2",
        "wpackagist-plugin/bugsnag": "^1.3.0",
        "wpackagist-plugin/duracelltomi-google-tag-manager": "1.8",
        "wpackagist-plugin/safe-svg": "^1.5.3",
        "wpackagist-plugin/tiny-compress-images": "2.2.6",
        "wpackagist-plugin/w3-total-cache": "^0.9.5.4",
        "wpackagist-plugin/wordfence": "^7.0.5"
    },
    "require-dev": {
        "behat/mink": "^1.7.1",
        "behat/mink-goutte-driver": "^1.2",
        "behat/mink-selenium2-driver": "^1.3.1",
        "paulgibbs/behat-wordpress-extension": "^0.9.0",
        "squizlabs/php_codesniffer": "^3.1.0",

        "wpackagist-plugin/check-email": "^0.5.5",
        "wpackagist-plugin/easy-development": "^1.0.5",
        "wpackagist-plugin/query-monitor": "^3.0.0",
        "wpackagist-plugin/wp-sweep": "^1.0",
        "wpackagist-plugin/duplicate-post":"^3.2.2"
    },
    "extra": {
        "installer-paths": {
            "web/app/mu-plugins/{$name}/": [
                "wpackagist-plugin/easy-development",
                "type:wordpress-muplugin"
            ],
            "web/app/plugins/{$name}/": ["type:wordpress-plugin"],
            "web/app/themes/{$name}/": ["type:wordpress-theme"]
        },
        "wordpress-install-dir": "web/wp"
    },
    "scripts": {
        "test": [
            "./vendor/bin/behat  --colors --stop-on-failure -v"
        ],
        "selenium": [
            "cp vendor/bin/chromedriver ~/bin/",
            "./vendor/bin/selenium-server-standalone"
        ]
    }
}
